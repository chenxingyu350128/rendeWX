/* pages/entrust/entrust.wxss */
page{
  background: #f7f7f7;
}
.nav_tab {
  width: 100%;
  display: flex;
  background: #fff;
  flex-direction: row;
}
.nav_tab view{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav_tab view:nth-of-type(1){
  justify-content: flex-start;
  margin-left: 41rpx;
}
.nav_tab view:nth-of-type(2){
  justify-content: flex-end;
  margin-right: 41rpx;
}
.nav_tab text{
  font-size: 0.75em;
  padding-top: 10rpx;
  padding-bottom: 7rpx;
}
.common{
  color:#909090;
}
.active{
  color:#000;
  border-bottom: 4rpx solid #3385ff;
}
.nav_title .postion-item-wrap:nth-child(1){
  margin-top: 0rpx;
}
.postion-item-wrap{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  background: #fff;
}
.postion-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 26rpx 29rpx 26rpx 32rpx;
}
.postion-item-left{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.postion-item-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.name{
  font-size: 0.9em;
}
.state{
  font-size: 0.65em;
}
.blue{
  font-size: 1.3em;
  color: #3385ff;
}
.money{
  margin-top: 30rpx;
  color: #3385ff;
  font-size: 0.9em;
}
.time{
  font-size: 0.6em;
  display: flex;
  justify-content: flex-end;
}
.line-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.line{
  width: 80%;
  height: 4rpx;
  background: #e5e5e5;
}
.arrow{
  width: 15rpx;
  height: 15rpx;
  border:#181818 solid;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(45deg);
  margin-right: 29rpx;
}
.bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 26rpx;
  padding-bottom: 26rpx;
}
.bottom-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.enterprise{
  font-size: 0.6em;
  margin-left: 32rpx;
}
.request{
  font-size: 0.6em;
  margin-left: 43rpx;
  color: #6b6b6b;
}