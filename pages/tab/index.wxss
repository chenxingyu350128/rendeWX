/* pages/tab/index.wxss */
@import '/utils/boxTitle.wxss';
@import '/utils/ocpBox.wxss';
page{
  background: #f7f7f7;
}
.header{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
}
.header label{
    position: relative;
    display: flex;
    align-items: center;
}
label image{
  position: absolute;
  left: 35rpx;
}
.leftImg{
  width: 27rpx;
  height: 26rpx;
}
.rightImg{
  width: 37rpx;
  height: 33rpx;
}
.header input{
  width: 530rpx;
  height: 49rpx;
  line-height: 49rpx;
  background: #f7f7f7;
  border-radius: 24.5rpx;
  padding-left: 80rpx;
  font-size: 20rpx;
  margin-right: 30rpx;
}
.swiperShell{
  width: 690rpx;
  height: 290rpx;
  padding:14px 30rpx;
  background: #fff;
}
.swiperShell swiper{
  width: 100%;
  height: 100%;
}
swiper-item image{
  width: 100%;
  height: 100%;
  border-radius:20rpx;
}
.nav{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding-top: 31rpx;
  background: #fff;
  /* padding-top: 31rpx;
  padding-bottom: 28rpx; */
}
.navItem{
  text-align: center;
  font-size: 24rpx;
  width: 25%;
  padding-bottom: 28rpx;
}
.navItem image{
  width: 76rpx;
  height: 76rpx;
}
