.info-bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 44;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 19rpx;
}
.bottom-finish{
  line-height:84rpx;
  font-size: 1em;
  color: #fff;
  text-align: center;
  width: 426rpx;
  border-radius: 50rpx;
