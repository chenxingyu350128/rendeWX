.info-bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 44;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 19rpx;
}
.bottom-finish{
  line-height:61rpx;
  font-size: 0.85em;
  color: #fff;
  text-align: center;
  width: 426rpx;
  border-radius: 50rpx;
  background: #3385ff;
  height: 61rpx;
}
.text-area{
  width:100%;
  z-index:1;
}
.text-area1{
  height:100rpx;
}
.block{
  height: 100rpx;
}
.shadow{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  box-shadow:0px -4px 7px #B8B8B8;
}
.position-name-wrap-image image{
  width: 133rpx;
  height: 133rpx;
}
.position-name-wrap-image1 image{
  width: 291rpx;
  height: 210rpx;
}
.position-name-wrap-image1{
  display: flex;
  justify-content: center;
  align-items: center;
}
input{
  width: 100%;
}