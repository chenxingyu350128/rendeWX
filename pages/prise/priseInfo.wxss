/* pages/prise/priseInfo.wxss */
@import '/pages/talent/talentInfo.wxss';
.talent-top{
  display: inline-block;
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
}
.priseinfobg {
  width: 100%;
  position: absolute;
}
.priseinfobg image{
  width: 100%;
  height: 450rpx;
}
.priseinfo{
  margin: 100rpx 0rpx 30rpx 30rpx;
  display: inline-block;
  width: 90%;
  position: relative;
  z-index: 2;
}
.prise-name{
    float:left;
    width:94rpx;
    height:100rpx;
    border-radius:100px;
    color:white;
    background-color:orange;
    text-align:center;
    padding:30rpx 33rpx;
    opacity:0.7;
}
.prise-fullname{
  color: white;
  width: 100%;
  float: left;
  padding-top: 30rpx;
}
.prise-fullname text:last-child{
  border: 1px solid white;
  border-radius: 50rpx;
  padding: 3rpx 30rpx;
 }
 .getFollow{
   background-color:rgb(70, 144, 255);
 }
.prise-fullname text{
  margin-right: 50rpx;
}
.prise-banner{
  width: 99%;
  margin-top: 25rpx;
  color: gray;
}
.prise-banner text{
   margin: 0rpx 50rpx;
   padding:20rpx 0;
   text-align: center ;
   display: inline-block;
}
.banner-active{
  color: black;
  border-bottom: 5rpx solid rgb(70, 144, 255);
  }
.box-content{
   margin: 20rpx;
  line-height: 50rpx;
    
}
.box-height{
   height: 200rpx;
   overflow: hidden;
}
.showmore image{
    width:33rpx;
    height:19rpx;
    margin:0 48%;

}
.show{
  display: none;
}

.go-icon{
  width:20rpx;
  height:22rpx;
  margin-left:2%;
  margin-top:1.5%;

}
.priseInfo-name{
  width: 500rpx;
  float: left;
}
.list-margin{
 margin-top: 30rpx
}
.position-message{
  margin-bottom: 150rpx;
  display: inline-block
}
.positionhr{
  height: 10rpx;
