/* pages/myExchange/myExchange.wxss */
page{
  background: #f7f7f7;
}

.nav_tab {
  width: 100%;
  display: flex;
  background: #fff;
  flex-direction: row;
}
.nav_tab view{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav_tab view:nth-of-type(1){
  justify-content: flex-start;
  margin-left: 41rpx;
}
.nav_tab view:nth-of-type(3){
  justify-content: flex-end;
  margin-right: 41rpx;
}
.nav_tab .text1{
  font-size: 0.75em;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.common{
  color:#909090;
}
.active{
  color:#3385ff;
  /* border-bottom: 4rpx solid #3385ff; */
}
.arrow2{
  /* margin-left: 0 !important; */
  width: 15rpx;
  height: 15rpx;
  border:#181818 solid;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(135deg);
  margin-left: 12rpx;
}
.arrow3{
  width: 15rpx;
  height: 15rpx;
  border:#181818 solid;
  border-width: 2rpx 2rpx 0 0;
  transform: rotate(-45deg);
  margin-left: 12rpx;
  margin-top: 10rpx;
}
.exchange{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.exchange-item{
  width: 90%;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 10rpx;
  padding:14rpx 17rpx 17rpx 23rpx;
  margin-top: 10rpx;
}
.left{
  display: flex;
  align-items: center;
}
.mid{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 34rpx;
}
.mid .name{
  font-size: 0.8em;
}
.mid .value{
  display: inline-block
}
.blue{
  color: #3385ff;
  font-size: 1em;
}
.mid .value .text{
  font-size: 0.8em;
}
.left image{
  width: 106rpx;
  height: 106rpx;
  border: 2rpx solid #a9cbfd;
  border-radius: 10rpx;
}
.right{
  display: flex;
  align-items: flex-end;
  flex-grow: 1;
  justify-content: flex-end;
  font-size: 0.7em;
  color:#7c7c7c;
}