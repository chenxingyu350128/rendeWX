/* pages/common/generalDetail.wxss */
page{
  background: #f7f7f7;
}
.shell>view{
  /* padding: 0 30rpx; */
  background: #fff;
  margin-bottom: 10rpx;
}
.showBox>view{
  background: #818181;
}
.base{
  padding: 13rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name{
  font-size: 36rpx;
  font-weight: 600;
}
.ocp{
  font-size: 24rpx;
  margin-top: 35rpx;
}
.right{
  text-align: right;
  font-size: 20rpx;
  color: #939393;
}
.view{
  margin-top: 43rpx;
}
.baseInfo{
  padding: 19rpx 30rpx 24rpx;
}
.year{
  padding: 36rpx 0 37rpx;
}
.year text,
.mobile text{
  color: #939393;
  margin-left: 1em;
}
.shell>view>view{
  font-size: 24rpx;
}
.shell view .title{
  border-left: 4rpx solid #3385ff;
  font-size: 26rpx;
  font-weight: 600;
  padding-left: 10rpx;
}
.selfIntro{
  padding: 10rpx 30rpx 67rpx
}
.selfIntro .detail{
  margin-top: 50rpx;
}
.edit{
  padding: 15rpx 30rpx 38rpx;
}
.btns{
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 36rpx;
}
.btns text{
  font-size: 30rpx;
  color: #fff;
  line-height: 68rpx;
  padding: 0 68rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.blue{
  background: #3385ff;
}
.green{
  background: #04ba3b;
}
.red{
  background: #ba0404;
}
/* 修改资料 */

.fillBox{
  display: flex;
  flex-direction: column-reverse;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100vh;
}
.table{
  padding: 29rpx 72rpx 72rpx;
  display: inline-block;
  background: #fff;
}
.board{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .4;
}
.table .align{
  display: flex;
  align-items: center;
  margin-bottom: 55rpx;
  line-height: 55rpx;
}
.align:first-child{
  margin-right: 150rpx;
}
.gender{
  font-size: 30rpx;
  padding: 0 32rpx;
  /* background: palevioletred; */
  border-radius: 4rpx;
  color: #3385FF;
  border: 1px solid #3385FF;
}
.checked{
  background: #3385FF;
  color: #fff;
  border: none;
}
.gender + .gender{
  margin-left: 60rpx;
}
.table>view text:first-child{
  min-width: 5em;
  font-size: 30rpx;
}
.table input{
  width: 461rpx;
  /* margin-left: 19rpx; */
  height: 55rpx;
  line-height: 55rpx;
  background: #CFCFCF;
  border-radius: 8rpx;
  border: 1px solid #828282;
  overflow: hidden;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.table .text{
  display: flex;
}
.table textarea{
  width: 461rpx;
  /* margin-left: 19rpx; */
  height: 375rpx;
  background: #CFCFCF;
  border-radius: 8rpx;
  border: 1px solid #828282;
  overflow: hidden;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.footer{
  padding: 18rpx 157rpx;
  box-shadow: 0 -4rpx 10rpx #818181; 
  background: #fff;
}
.footer view{
  background: #3385FF;
  color: #fff;
  line-height: 62rpx;
  font-size: 30rpx;
  text-align: center;
}