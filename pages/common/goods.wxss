/* pages/common/goods.wxss */
@import '/utils/boxTitle.wxss';
page{
  background: #f7f7f7;
}
page>image{
  width: 100%;
  height: 381rpx;
}
.payInfo{
  padding: 20rpx 45rpx 20rpx 35rpx;
  background: #fff;
}
.name{
  font-size: 26rpx;
  font-weight: 600;
}
.priceStorage{
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #767676;
  margin: 38rpx 0 35rpx;
}
.priceStorage .price{
  font-size: 30rpx;
  color: #f00;
}
.storage{
  margin-left: 80rpx;
}
.exchange{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.exchange image{
  width: 24rpx;
  height: 24rpx;
  cursor: pointer;
}
.exchange .left{
  color: #fff;
  background: #3385FF;
  line-height: 48rpx;
  font-size: 26rpx;
  padding: 0 34rpx;
  border-radius: 4rpx;
  overflow: hidden;
  cursor: pointer;
}
.exchange .right{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.exchange .right text{
  font-size: 30rpx;
}
.details{
  padding: 33rpx 30rpx 93rpx;
  overflow: hidden;
  background: #fff;
}
.details image{
  width: 100%;
  font-size: 0;
  line-height: 0;
  float: left;
}